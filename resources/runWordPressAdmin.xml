<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="WordPress - Admin">

	<listeners>
		<listener class-name="commons.wordPress.MethodListener" />
		<listener class-name="reportConfig.wordPress.ReportNGListener" />
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<!-- <listener class-name="reportConfig.wordPress.ExtentTestListenerV5" /> -->
		<!-- <listener class-name="reportConfig.wordPress.AllureTestListener" /> -->
	</listeners>

	<parameter name="adminUrl" value="https://automationfc.wordpress.com/wp-admin/" />
	<parameter name="userUrl" value="https://automationfc.wordpress.com/" />

	<test name="Run on Firefox">
		<parameter name="browser" value="Firefox" />
		
		<packages>
			<package name="com.wordpress.admin" />
		</packages>
		
		<classes>
			<class name="com.wordpress.admin.Post_01_Create_Read_Update_Delete_Search" />
		</classes>
		

	</test>

